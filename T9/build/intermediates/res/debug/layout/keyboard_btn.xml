<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/kb_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/keyboard_btn_num_color"
            android:textSize="@dimen/keyboard_btn_number_font_size" />

        <TextView
            android:id="@+id/kb_letter_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABC"
            android:textColor="@color/keyboard_btn_text_color"
            android:textSize="@dimen/keyboard_btn_text_font_size" />

    </LinearLayout>

</RelativeLayout>
